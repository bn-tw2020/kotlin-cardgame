<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints="name"
        android:background="@drawable/nickname_underline"
        android:hint="@string/hint_nickname"
        android:inputType="text"
        android:padding="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="70dp"
        android:background="#5A5959" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/background_gray"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_emoji1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/description_image_emoji"
                android:src="@drawable/ic_happy_emoji_svgrepo_com" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_gray">

            <ImageView
                android:id="@+id/iv_emoji2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/description_image_emoji"
                android:src="@drawable/ic_surprised_emoji_svgrepo_com"
                tools:ignore="DuplicateIds" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_gray">

            <ImageView
                android:id="@+id/iv_emoji3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/description_image_emoji"
                android:src="@drawable/ic_happy_emoji_svgrepo_com__1_" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_gray">

            <ImageView
                android:id="@+id/iv_emoji4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/description_image_emoji"
                android:src="@drawable/ic_shocked_emoji_svgrepo_com" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_main_emoji"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/description_main_image_emoji"
        android:src="@drawable/ic_surprised_emoji_svgrepo_com" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/button_next" />
</LinearLayout>