<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints="name"
        android:background="@drawable/nickname_underline"
        android:hint="@string/hint_nickname"
        android:inputType="text"
        android:padding="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="70dp"
        android:background="#5A5959" />

    <RadioGroup
        android:id="@+id/radiogroup_emoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radiobutton_emoji1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/selector_happy_emoji"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radiobutton_emoji2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/selector_happy_emoji2"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radiobutton_emoji3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/selector_shocked_emoji"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/radiobutton_emoji4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/selector_surprised_emoji"
            android:button="@null"
            android:gravity="center" />
    </RadioGroup>

    <ImageView
        android:id="@+id/iv_main_emoji"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="@string/description_main_image_emoji" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:enabled="false"
        android:text="@string/button_next" />
</LinearLayout>